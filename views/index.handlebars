<div class="container">
    <h1> Eat-Da-Burger! </h1>

    <img src="../assets/img/burger_cat.png" alt="cat burger">

<div class="unDevoured">
    <ul>
    <div class="card">
        <div class="card-body">     
            {{#each burgers}}
                {{#unless this.devoured}}
                    <li>{{burger_name}}</li>
                        <button class="devour-state btn btn-danger" data-id="{{id}}" data-newDevoured="{{finished}}" type="submit">Finish Him!
                            {{#if finished}}Finish!{{/if}}
                        </button>
                {{/unless}} 
            {{/each}}
        </div>
    </div>
    </ul>
</div>

<div class="devoured">
    <ul>
        <div class="card">
            <div class="card-body"> 
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </ul>
</div>




<div class="addBurger">
    <h2>Add a Burger</h2>
        <form class="create-form" action="/api/burgers" method="POST">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="burgerSubmit" name="burger_name">
            </div>
                <br>
    <button type="submit" class="btn btn-secondary">Submit</button>
    <p>Add a Burger, by clicking on "Submit"!</p>
        </form>
</div>
</div>